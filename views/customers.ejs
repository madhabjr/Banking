<% layout('./layouts/layouts') %>
    <style>
        @media screen and (min-width: 900px) {
            .container {
                width: 60%;
            }
        }
    </style>
    <div class="container ">
        <% for(let c of customer) {%>
            <div class="card mb-3 maincard p-3 ">
                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <a href="/customer/<%= c._id %>"> <img src="<%= c.avatar %>" class="card-img-top imgsh"
                                alt="..."></a>
                    </div>
                    <div class="col-md-6 col-lg-8 ">
                        <div class="card-body p-5">
                            <h3 class="card-title" style="text-transform: capitalize;">
                                <b>
                                    <%= c.username %>
                                </b>
                            </h3>
                            <p class="card-text">
                                <%= c.about %>
                            </p>
                            <a class="btn btn-info btn-md rounded-pill" href="/customer/<%= c._id %>">Details..</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>